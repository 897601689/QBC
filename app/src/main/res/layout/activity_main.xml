<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mian_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_test"
            android:layout_width="340.5dp"
            android:layout_height="136.5dp"
            android:background="@drawable/test" />

        <TextView
            android:id="@+id/txt_close"
            android:layout_width="140.5dp"
            android:layout_height="136.5dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_set"
            android:layout_width="245.5dp"
            android:layout_height="136.5dp"
            android:background="@drawable/set" />

        <TextView
            android:id="@+id/txt_query"
            android:layout_width="235.5dp"
            android:layout_height="136.5dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/query" />
    </LinearLayout>


</LinearLayout>